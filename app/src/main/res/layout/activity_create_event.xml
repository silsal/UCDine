<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.saorla.ucdfood.CreateEvent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:background = "@drawable/background"
        tools:context="com.example.androis.myapplication.MainActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="vertical"
            android:padding="10dp"
            android:background="@color/white">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="7dp"
                android:background="@color/lightGrey">
                <ImageView
                    android:id="@+id/eventImageView"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/event_icon"
                    android:scaleType="fitXY"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:paddingRight="5dp"
                    android:paddingLeft="5dp"
                    />
                <EditText
                    android:id="@+id/eventTitle"
                    android:layout_width="190dp"
                    android:layout_height="60dp"
                    android:layout_marginBottom="7dp"
                    android:background="@color/lightGrey"
                    android:hint="@string/event_title"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp"
                    android:paddingRight="5dp"
                    android:paddingLeft="10dp"
                    android:gravity="center_vertical"
                    android:textSize="16sp"
                    android:layout_toRightOf="@id/eventImageView"/>
                <ImageButton
                    android:id="@+id/camera"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:paddingRight="5dp"
                    android:paddingLeft="5dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/camera_icon"
                    android:background="@color/lightGrey"
                    android:layout_toRightOf="@id/eventTitle"
                    android:onClick="takePicture" >
                </ImageButton>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="7dp"
                android:background="@color/lightGrey">
                <ImageView
                    android:id="@+id/locationImageView"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/location_icon"
                    android:scaleType="fitXY"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:paddingRight="5dp"
                    android:paddingLeft="5dp"
                    />
                <EditText
                    android:id="@+id/location"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginBottom="7dp"
                    android:background="@color/lightGrey"
                    android:hint="@string/location"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp"
                    android:paddingRight="5dp"
                    android:paddingLeft="10dp"
                    android:gravity="center_vertical"
                    android:textSize="16sp"
                    android:layout_toRightOf="@id/locationImageView"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="7dp"
                android:background="@color/lightGrey">
                <ImageView
                    android:id="@+id/calendarImageView"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/calendar_icon"
                    android:scaleType="fitXY"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:paddingRight="5dp"
                    android:paddingLeft="5dp"
                    />
                <EditText
                    android:id="@+id/date"
                    android:layout_width="95dp"
                    android:layout_height="60dp"
                    android:layout_marginBottom="7dp"
                    android:background="@color/lightGrey"
                    android:hint="@string/date"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp"
                    android:paddingRight="5dp"
                    android:paddingLeft="10dp"
                    android:gravity="center_vertical"
                    android:textSize="16sp"
                    android:layout_toRightOf="@id/calendarImageView"
                    style="@android:style/Widget.DeviceDefault.Light.Spinner"/>
                <ImageView
                    android:id="@+id/hourImageView"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/clock_icon"
                    android:scaleType="fitXY"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:paddingRight="5dp"
                    android:paddingLeft="5dp"
                    android:layout_toRightOf="@id/date"
                    />
                <EditText
                    android:id="@+id/hour"
                    android:layout_width="95dp"
                    android:layout_height="60dp"
                    android:layout_marginBottom="7dp"
                    android:background="@color/lightGrey"
                    android:hint="@string/hour"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp"
                    android:paddingRight="5dp"
                    android:paddingLeft="10dp"
                    android:gravity="center_vertical"
                    android:textSize="16sp"
                    android:layout_toRightOf="@id/hourImageView"
                    style="@android:style/Widget.DeviceDefault.Light.Spinner"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="7dp"
                android:background="@color/lightGrey">
                <ImageView
                    android:id="@+id/foodImageView"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/food_icon"
                    android:scaleType="fitXY"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:paddingRight="5dp"
                    android:paddingLeft="5dp"
                    />
                <EditText
                    android:id="@+id/food"
                    android:layout_width="95dp"
                    android:layout_height="60dp"
                    android:layout_marginBottom="7dp"
                    android:background="@color/lightGrey"
                    android:hint="@string/food"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp"
                    android:paddingRight="5dp"
                    android:paddingLeft="10dp"
                    android:gravity="center_vertical"
                    android:textSize="16sp"
                    android:layout_toRightOf="@id/foodImageView" />
                <ImageView
                    android:id="@+id/allergiesImageView"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/allergy_icons"
                    android:scaleType="fitXY"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:paddingRight="5dp"
                    android:paddingLeft="5dp"
                    />
                <EditText
                    android:id="@+id/allergy"
                    android:layout_width="100dp"
                    android:layout_height="60dp"
                    android:layout_marginBottom="7dp"
                    android:background="@color/lightGrey"
                    android:hint="@string/allergy"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp"
                    android:paddingRight="5dp"
                    android:paddingLeft="10dp"
                    android:gravity="center_vertical"
                    android:textSize="16sp"
                    android:layout_toRightOf="@id/foodImageView" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="7dp"
                android:background="@color/lightGrey">
                <ImageView
                    android:id="@+id/descriptionImageView"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/description_icon"
                    android:scaleType="fitStart"
                    android:gravity="top"
                    android:paddingBottom="5dp"
                    android:paddingTop="0dp"
                    android:paddingRight="5dp"
                    android:paddingLeft="5dp"
                    />
                <EditText
                    android:id="@+id/description"
                    android:inputType="textMultiLine"
                    android:minLines="6"
                    android:gravity="top|left"
                    android:maxLines="10"
                    android:scrollbars="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="100dp"
                    android:layout_marginBottom="7dp"
                    android:background="@color/lightGrey"
                    android:hint="@string/description"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp"
                    android:paddingRight="5dp"
                    android:paddingLeft="10dp"
                    android:textSize="16sp"

                    android:layout_toRightOf="@id/foodImageView" />
            </LinearLayout>
            <Button
                android:id="@+id/submit_btn"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@color/orange"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:text="@string/button" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>