<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="418dp"
        android:layout_height="288dp"
        android:layout_weight="0.07"
        android:weightSum="1">

        <ImageView
            android:layout_width="370dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/logo_options_2"
            android:id="@+id/imageView" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="421dp"
        android:layout_height="324dp"
        android:background="@color/colorPrimaryDark">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="118dp"
            android:weightSum="1">

            <Button
                android:text="@string/profile"
                android:layout_width="182dp"
                android:layout_height="wrap_content"
                android:id="@+id/BProfileActivity"
                android:onClick="showProfileActivity"
                android:background="@drawable/white_profile_icon"
                android:textDirection="anyRtl"
                android:textAppearance="@style/TextAppearance.AppCompat.Display2" />

            <Button
                android:layout_width="197dp"
                android:layout_height="match_parent"
                android:id="@+id/BAttend"
                android:background="@drawable/white_attend_icon"
                android:text="@string/attend_event"
                android:onClick="showEventListActivity"
                android:textAppearance="@style/TextAppearance.AppCompat.Display2"
                android:elevation="0dp" />


        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:weightSum="1">

            <Button
                android:text="Find Recipe"
                android:layout_width="145dp"
                android:layout_height="106dp"
                android:id="@+id/BViewRecipe"
                android:onClick="showRecipeFinder"
                android:background="@drawable/white_cb_icon"
                android:textAppearance="@style/TextAppearance.AppCompat.Display2"
                android:layout_weight="0.37" />

            <Button
                android:layout_width="187dp"
                android:layout_height="112dp"

                android:id="@+id/BCreateEvent"
                android:onClick="showCreateActivity"
                android:background="@drawable/white_serve_icon"
                android:text="@string/host_event"
                android:textAppearance="@style/TextAppearance.AppCompat.Display2"
                android:layout_weight="0.07" />
        </LinearLayout>
    </LinearLayout>




</LinearLayout>