                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:id="@+id/fv_listview_host_activity"
                android:headerDividersEnabled="false"
                android:footerDividersEnabled="false">

            </ListView>

            <ListView
