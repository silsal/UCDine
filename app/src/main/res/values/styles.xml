<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/colorText</item>
    </style>

    <style name="MainFont">
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textColorHint">@color/colorTextEditable</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColorAlertDialogListItem">@color/colorPrimaryDark</item>
        <item name="android:textSize">15sp</item>
    </style>


    <style name = "HeaderFont" parent="MainFont">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="LabelFont" parent="MainFont">
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textColorHint">@color/colorTextLabel</item>
    </style>

    <style name = "ButtonFont" parent="MainFont">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorTextButton</item>
        <item name="android:background">@drawable/border_button</item>
    </style>





    <style name="editableText">
        <item name="android:textColorHint">@color/colorTextEditable</item>
        <item name="android:textColor">@color/colorTextEditable2</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="nonEditText">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="profileText1">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textSize">30dp</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="profileText2" parent="profileText1">
        <item name="android:textSize">20dp</item>
    </style>

    <style name="profileText3" parent="profileText1">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">13dp</item>
    </style>

    <style name="editProfileText1" parent="profileText1">
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginEnd">0dp</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">25dp</item>
    </style>

    <style name="editProfileText2" parent="hostAttendText">
        <item name="android:textSize">15dp</item>
    </style>


    <style name="profileDetailsText">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">left|center</item>
        <item name="android:textSize">15dp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="profile_details" parent="profileDetailsText">
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
    </style>

    <style name="profile_margins">
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>

    <style name="icon_margins">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>

    <style name="profile_button" parent="profile_details">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:background">@drawable/border_button</item>
    </style>

    <style name="welcomeNoteText">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">left|top</item>
        <item name="android:textSize">25dp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="welcomeNoteSubText">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">left|center</item>
        <item name="android:textSize">21dp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="sectionHeaderText">
        <item name="android:textColor">#302f2f</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textSize">17dp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="hostAttendText">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textStyle">italic|bold</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textSize">11dp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

</resources>
