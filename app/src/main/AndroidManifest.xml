<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.saorla.ucdfood">
    <!--internet permission-->
    <uses-permission android:name="android.permission.INTERNET" />

    <!--camera permission-->
    <uses-feature android:name="android.hardware.camera"
        android:required="false" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".RecipeFinder"
            android:configChanges="orientation|screenSize"></activity>
        <activity android:name=".CreateEvent" />
        <activity android:name=".printEventFields" />
        <activity android:name=".Display" />
        <activity android:name=".SignUp" />

        <activity android:name=".ProfileActivity"
            android:label="@string/profile"
            android:parentActivityName=".Display"
            android:windowSoftInputMode="stateHidden|adjustResize">

        <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value=".Display"/>
        </activity>

        <activity android:name=".ProfileEditActivity"
            android:label="@string/edit_profile"
            android:parentActivityName=".ProfileActivity"
            android:windowSoftInputMode="stateHidden|adjustResize">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ProfileActivity"/>

        </activity>


